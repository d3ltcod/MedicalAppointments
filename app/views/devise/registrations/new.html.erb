<div class="container-fluid h-custom">
  <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-md-9 col-lg-6 col-xl-5">
      <%= image_tag("logo.png", :alt => "Logo") %>
    </div>
    <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field form-outline mb-4">
        <%= f.label :email, class:"form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
      </div>

      <div class="field form-outline mb-3">
        <%= f.label :password, class:"form-label"%><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg" %>
      </div>

      <div class="field form-outline mb-2">
        <%= f.label :password_confirmation, class:"form-label"%><br />
        <%= f.password_field :password_confirmation, autocomplete: "current-password", class: "form-control form-control-lg" %>
      </div>

      <div class="field form-outline mb-1">
        <%= f.label :full_name, class:"form-label" %><br />
        <%= f.text_field :full_name, class: "form-control form-control-lg" %>
      </div>

      <div class="field form-outline mb-1">
        <%= f.label :city, class:"form-label" %><br />
        <%= f.text_field :city, class: "form-control form-control-lg" %>
      </div>

      <div class="d-flex justify-content-between align-items-center">
        <% if devise_mapping.rememberable? %>
          <div class="field form-check mb-0">
            <%= f.check_box :role, class:"form-check-input me-2" %>
            <%= f.label :"Sign up as a Doctor", class:"form-check-label" %>
          </div>
        <% end %>
        <%= f.submit "Sign up", class:"btn btn-primary btn-lg" %>
        </div>
          <p class="small fw-bold mt-2 pt-1 mb-0">Have an account? <%= link_to 'Sign In!', new_user_session_path, class: "link-info"%></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
