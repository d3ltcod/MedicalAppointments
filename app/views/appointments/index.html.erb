<div class="container">
  <div class="d-flex justify-content-between">
    <div>
      <h2>My Appointments</h2>
    </div>
    <div>
      <% if current_user.patient? %>
        <a href="#" onclick="visit('/directory')" class="btn btn-primary btn-lg">My Directory</a>
      <% end %>
    </div>
  </div>
  <hr />
  <div class="panel panel-default">
    <div class="panel-body">
      <% @appointments.each do |appointment| %>
        <div class="card mt-4">
          <% if current_user.patient? %>
            <%= render "appointments/appointment_pat", :appointment => appointment %>
          <% else %>
            <%= render "appointments/appointment_doc", :appointment => appointment %>
          <% end %>
        </div>
      <% end %> 
    </div>
  </div>
</div>
